{
    "atomCode": "sendmsgDemo",
    "execution": {
        "packagePath": "sendmsgDemo-1.0.0.tar.gz",
        "language": "python",
        "demands": [
            "pip install sendmsgDemo-1.0.0.tar.gz"
        ],
        "target": "sendmsgDemo"
    },
    "input": {
        "send_by": {
            "label": "消息发送方式",
            "type": "atom-checkbox-list",
            "list": [
                {
                    "id": "weixin",
                    "name": "企业微信",
                    "disable": false,
                    "desc": "消息会发送到企业微信应用号，需先在ESB配置企业微信应用号信息"
                }, 
                {
                    "id": "mail",
                    "name": "邮件",
                    "disable": false,
                    "desc": "发送到邮件"
                }
            ]
        },
        "send_to": {
            "label":"发送目标",
            "default":"",
            "placeholder":"用户名",
            "type":"vuex-input",
            "desc":"使用分号;分隔多个用户名",
            "required": true,
            "rely":{
                "operation": "OR",
                "expression":[
                    {
                        "key": "send_by",
                        "value": ["weixin","mail"]
                    }
                ]
            }
        },
        "title": {
            "label":"标题",
            "default":"",
            "placeholder":"标题",
            "type":"vuex-input",
            "desc":"企业微信消息标题或邮件标题",
            "required": true,
            "rely":{
                "operation": "OR",
                "expression":[
                    {
                        "key": "send_by",
                        "value": "weixin"
                    },
                    {
                        "key": "send_by",
                        "value": "mail"
                    }
                ]
            }
        },
        "content": {
            "label": "消息内容",
            "default": "",
            "type": "vuex-textarea",
            "disabled": false,
            "hidden": false,
            "isSensitive": false,
            "desc": "消息内容，可使用变量${VAR}",
            "required": true,
            "rely":{
                "operation": "OR",
                "expression":[
                    {
                        "key": "send_by",
                        "value": "weixin"
                    },
                    {
                        "key": "send_by",
                        "value": "mail"
                    }
                ]
            }
        },
        "send_by_robot": {
            "label": "",
            "type": "atom-checkbox",
            "default": false,
            "text": "发送至企业微信群机器人",
            "desc": ""
        },
        "robot_key": {
            "label":"机器人webhook key",
            "default":"",
            "placeholder":"机器人webhook key",
            "type":"vuex-input",
            "desc":"企业微信机器人webhook key，建议使用凭证管理",
            "required": true,
            "rely": {
                "operation": "AND",
                "expression": [
                    {
                        "key": "send_by_robot",
                        "value": true
                    }
                ]
            }
        },
        "msgtype": {
            "label": "消息类型",
            "type": "selector",
            "default": "text",
            "desc": "消息类型可以为text/markdown",
            "options": [
                {
                    "id": "text",
                    "name": "text",
                    "desc": "",
                    "disable": false
                },
                {
                    "id": "markdown",
                    "name": "markdown",
                    "desc": "",
                    "disable": false
                }
            ],
            "rely": {
                "operation": "AND",
                "expression": [
                    {
                        "key": "send_by_robot",
                        "value": true
                    }
                ]
            }
        },
        "mentioned": {
            "label": "@群成员",
            "type": "vuex-input",
            "default": "",
            "placeholder": "PonyMa;@all",
            "desc":"使用企业微信UserId，通过管理员后台可获取，分号分隔多个UserId",
            "rely": {
                "operation":"AND",
                "expression":[
                    {
                        "key":"send_by_robot",
                        "value": true
                    },
                    {
                        "key": "msgtype",
                        "value": "text"
                    }
                ]
            }
        },
        "robot_content": {
            "label": "群消息内容",
            "type": "vuex-textarea",
            "default": "",
            "placeholder": "消息类型为markdown时，可使用markdown语法",
            "desc":"消息类型为markdown时，可使用markdown语法",
            "required": true,
            "rely": {
                "operation": "AND",
                "expression": [
                    {
                        "key": "send_by_robot",
                        "value": true
                    }
                ]
            }
        }
    },
    "output": {
        "TEST_OUTPUT":{
            "type": "string",
            "description": "测试输出"
        }
    }
}